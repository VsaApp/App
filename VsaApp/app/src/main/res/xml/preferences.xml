<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="button_loginData"
        android:title="@string/preferenceCategory_loginData">

        <EditTextPreference
            android:key="pref_username"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/preferenceTitle_webpageUsername"
            android:summary="@string/preferenceSummary_webpageUsername"/>

        <EditTextPreference
            android:inputType="textPassword"
            android:key="pref_password"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:password="true"
            android:title="@string/preferenceTitle_webpagePassword"
            android:summary="@string/preferenceSummary_webpagePassword"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="button_userInfo"
        android:title="@string/preferenceCategory_userInfo">

        <ListPreference
            android:defaultValue="180"
            android:entries="@array/nameOfClasses"
            android:entryValues="@array/nameOfClasses"
            android:key="sync_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/preferenceTitle_classname"
            android:summary="@string/preferenceSummary_classname"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="button_appPref"
        android:title="@string/preferenceCategory_appPref">

        <CheckBoxPreference
            android:key="pref_showVpInSp"
            android:title="@string/preferenceTitle_showVpInSp"
            android:summary="@string/preferenceSummary_showVpInSp"
            android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>