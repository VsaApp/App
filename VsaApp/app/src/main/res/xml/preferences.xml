<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="button_userInfo"
        android:title="@string/preferenceCategory_userInfo">

        <ListPreference
            android:defaultValue="180"
            android:entries="@array/nameOfGrades"
            android:entryValues="@array/nameOfGrades"
            android:key="pref_grade"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="@string/choose_grade"
            android:title="@string/preferenceTitle_classname" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="button_appPref"
        android:title="@string/preferenceCategory_appPref">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_showVpInSp"
            android:summary="@string/preferenceSummary_showVpInSp"
            android:title="@string/preferenceTitle_showVpInSp" />

    </PreferenceCategory>

</PreferenceScreen>