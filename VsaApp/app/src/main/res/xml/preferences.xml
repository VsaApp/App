<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="button_appPref"
        android:title="@string/preferenceCategory_appPref">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_showVpOnlyForYou"
            android:summary="@string/preferenceSummary_showVpOnlyForYou"
            android:title="@string/preferenceTitle_showVpOnlyForYou" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_showVpinSp"
            android:summary="@string/preferenceSummary_showVpinSp"
            android:title="@string/preferenceTitle_showVpinSp" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_lockSubjects"
            android:summary="@string/preferenceSummary_lockSubjects"
            android:title="@string/preferenceTitle_lockSubjects" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_mutePhone"
            android:summary="@string/preferenceSummary_mutePhone"
            android:title="@string/preferenceTitle_mutePhone" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="button_userInfo"
        android:title="@string/preferenceCategory_userInfo">

        <Preference
            android:key="pref_grade"
            android:summary="@string/choose_grade"
            android:title="@string/preferenceTitle_classname" />

        <Preference
            android:key="pref_logout"
            android:summary="@string/logout_summary"
            android:title="@string/logout" />

    </PreferenceCategory>

</PreferenceScreen>