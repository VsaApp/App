<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dates_calendar_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/calendarBorder"
    android:orientation="vertical"
    android:paddingBottom="1px"
    android:paddingEnd="1px"
    android:paddingRight="1px"
    tools:ignore="RtlSymmetry">

    <RelativeLayout
        android:id="@+id/dates_calendar_item_layout_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/calendarItem">

        <TextView
            android:id="@+id/day_of_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>